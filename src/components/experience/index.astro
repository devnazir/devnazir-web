---
interface Experience {
  company: string;
  logo: string;
  title: string;
  year: string;
  linkedin?: string;
}

const { experiences } = Astro.props;
---

<div class="flex flex-col gap-4">
  {
    experiences.map((exp: Experience) => (
      <div class="flex items-center justify-between border-b border-gray-200 pb-4 last:border-b-0">
        <div class="flex items-center gap-4">
          <a
            href={exp.linkedin}
            target="_blank"
            rel="noopener noreferrer"
            class="flex items-center gap-4"
          >
            <img src={exp.logo} alt={`${exp.company} logo`} class="w-12 h-12 object-contain" />
            <span class="text-base">{exp.company}</span>
          </a>
        </div>
        <div class="text-right">
          <div class="font-medium">{exp.title}</div>
          <div class="text-gray-600">{exp.year}</div>
        </div>
      </div>
    ))
  }
</div>
